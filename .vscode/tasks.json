{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Regenerate compile_commands.json for Project",
			"detail": "Regenerates compile_commands.json and the .rsp.gcd files used by clangd",
			"type": "shell",
			"command": "C:/EpicGames/UE_5.4/Engine/Binaries/DotNET/AutomationTool/UnrealBuildTool.exe",
			"args": [
				"-mode=GenerateClangDatabase",
				"-project=\"${workspaceFolder}/TP_Chimp.uproject\"",
				"-outputdir=\"${workspaceFolder}/.vscode\"",
				"TP_ChimpEditor",
				"Development",
				"Win64"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false
			},
			"promptOnClose": false,
			"problemMatcher": "$msCompile",
		},
		{
			"label": "Regenerate Headers",
			"detail": "Regenerate the .generated.h files in case you modify any headers",
			"command": "C:/EpicGames/UE_5.4/Engine/Build/BatchFiles/Build.bat",
			"args": [
				"-target=\"TP_ChimpEditor Win64 Development\"",
				"-project=\"${workspaceFolder}/TP_Chimp.uproject\"",
				"-skipbuild"
			],
			"type": "shell",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false,
				"close": true,
			},
			"promptOnClose": false,
			"problemMatcher": "$msCompile",
		},
		{
			"label": "Build Project",
			"detail": "Actually builds the project's Editor target",
			"command": "${workspaceFolder}/build.bat",
			"type": "shell",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false,
			},
			"promptOnClose": false,
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Generate Project Files",
			"type": "shell",
			"command": "C:/EpicGames/UE_5.4/Engine/Build/BatchFiles/Build.bat",
			"args": [
				"-projectfiles",
				"-2022",
				"-CurrentPlatform",
				"-project=\"${workspaceFolder}/TP_Chimp.uproject\"",
				"-game",
				"-engine",
				"-dotnet"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"showReuseMessage": false
			},
			"promptOnClose": false,
			"problemMatcher": "$msCompile",
			"dependsOrder": "sequence",
			"dependsOn": ["Build Project"]
		}
    ]
}